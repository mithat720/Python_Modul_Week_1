n=input("enter a number ")
while not n.isdigit():
    n=input("Please enter a valid number ")
evenNumbers=""
for i in range(0,int(n)+1):
    if i%2==0:
        evenNumbers = evenNumbers +" "+ str(i)
print("with 'for loop' solution\n",evenNumbers)
evenNumbers=""
j=0
while j<= int(n):
    if j%2==0:
        evenNumbers = evenNumbers +" "+ str(j)
    j=j+1
print("with 'while loop' solution\n",evenNumbers)